<!--templates/search/search-template.wxml-->
<template name="search">
	<view class="cu-bar bg-white search solid-bottom">
		<view class="search-form radius">
			<text class="cuIcon-search"></text>
			<input type="text" placeholder="{{plhStr}}" confirm-type="search" bindfocus="onSearchFocus"></input>
		</view>
		<view wx:if="{{onSearch}}" class="action" bindtap="onSearchCancel">
			<text class="cuIcon-close"></text>
			<text>取消</text>
		</view>
	</view>
</template>